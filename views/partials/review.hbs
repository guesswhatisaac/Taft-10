<div class="review-display">
    <div class="profile-display">&nbsp;</div>
    <div class="reviewer-display">
        <div id="name-display"> {{nameDisplay}} </div>
        <div id="label-display"> Reviewer </div>
        <div class="rating-and-date"> 
            <div id="rating-display"> {{ratingDisplay}} ★ </div>
            <div id="dot-display">•</div>
            <div id="date-display"> {{dateDisplay}} </div>
        </div>
    </div>
    <div class="upvote-container">
        <div class="upvote-display">&nbsp;</div>
        <div class="upvote-count-display"> {{upvotesDisplay}} </div>
    </div>
</div>
<div id="review-text-display"> {{reviewDisplay}} </div>
